<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.lulebe.interviewer.ui.interviewCreation.CreateInterviewSecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="Select the schedule for this interview."/>



        <com.github.florent37.expansionpanel.ExpansionHeader
            android:id="@+id/header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:expansion_headerIndicator="@id/indicator1"
            app:expansion_headerIndicatorRotationCollapsed="-90"
            app:expansion_headerIndicatorRotationExpanded="0"
            app:expansion_layout="@id/layout1"
            app:expansion_toggleOnClick="true"
            android:background="@drawable/bg_expansion_header"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:text="Interval"/>

            <TextView
                android:id="@+id/tv_selected_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

            <ImageView
                android:id="@+id/indicator1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                />
        </com.github.florent37.expansionpanel.ExpansionHeader>

        <com.github.florent37.expansionpanel.ExpansionLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">
                <de.lulebe.interviewer.ui.views.ChipMultiPickerView
                    android:id="@+id/chips_interval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:allowMultiSelect="false"
                    app:fullWidthChips="true"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="X = "
                        android:inputType="number"
                        android:gravity="center_horizontal"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </com.github.florent37.expansionpanel.ExpansionLayout>



        <com.github.florent37.expansionpanel.ExpansionHeader
            android:id="@+id/header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:expansion_headerIndicator="@id/indicator2"
            app:expansion_headerIndicatorRotationCollapsed="-90"
            app:expansion_headerIndicatorRotationExpanded="0"
            app:expansion_layout="@id/layout2"
            app:expansion_toggleOnClick="true"
            android:background="@drawable/bg_expansion_header"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:text="Start interval on"/>

            <TextView
                android:id="@+id/tv_selected_occurrence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

            <ImageView
                android:id="@+id/indicator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                />
        </com.github.florent37.expansionpanel.ExpansionHeader>

        <com.github.florent37.expansionpanel.ExpansionLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/tv_hint_first_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:text="Pick a month:"
                    android:visibility="gone"/>
                <de.lulebe.interviewer.ui.views.ChipMultiPickerView
                    android:id="@+id/chips_first_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:allowMultiSelect="false"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_hint_first_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:text="Pick a date:"
                    android:visibility="gone"/>
                <de.lulebe.interviewer.ui.views.ChipMultiPickerView
                    android:id="@+id/chips_first_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:allowMultiSelect="false"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tv_hint_first_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:text="Pick a day:"
                    android:visibility="gone"/>
                <de.lulebe.interviewer.ui.views.ChipMultiPickerView
                    android:id="@+id/chips_first_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:allowMultiSelect="false"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tv_info_intervalfirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:text="Pick an interval first."
                    android:layout_margin="16dp"/>
            </LinearLayout>

        </com.github.florent37.expansionpanel.ExpansionLayout>



    </LinearLayout>

</ScrollView>